    // Inicializaci√≥n de Firebase BAJO DEMANDA
    async function inicializarFirebase() {
      if (firebaseInicializado) return; // Evitar m√∫ltiples inicializaciones
      
      try {
        console.log("üîÑ Conectando a Firebase bajo demanda...");
